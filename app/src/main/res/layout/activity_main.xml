<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/cosmos"
    android:orientation="vertical">

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/astronaut"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Astronaut"
        android:textSize="26sp"
        android:textColor="#01B6FD"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_write_wish"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:text="Написать"
        app:cornerRadius="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/et_my_wish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginVertical="20dp"
        android:hint="Write here"
        android:textColorHint="#63FFFFFF"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:visibility="invisible"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_send_wish"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:text="Отправить"
        app:cornerRadius="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:visibility="invisible"/>

</androidx.appcompat.widget.LinearLayoutCompat>